<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/img_videoImg"
        android:layout_width="@dimen/item_video_width"
        android:layout_height="@dimen/item_video_height"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true" />

    <TextView
        android:id="@+id/video_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginLeft="@dimen/margin_ten"
        android:text="video_title"
        android:textSize="@dimen/video_img_title_size"
        android:layout_alignParentTop="true"
        android:layout_marginTop="12dp"
        android:layout_toEndOf="@+id/img_videoImg" />
    <TextView
        android:id="@+id/quality"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_ten"
        android:layout_marginTop="17dp"
        android:text="@string/quality"
        android:layout_below="@+id/video_title"
        android:layout_toEndOf="@+id/img_videoImg" />
    <TextView
        android:id="@+id/video_lengh"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_ten"
        android:text="chuan"
        android:layout_alignBaseline="@+id/quality"
        android:layout_alignBottom="@+id/quality"
        android:layout_toEndOf="@+id/quality" />
</RelativeLayout>