<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:id="@+id/cv_item_movie"
        android:layout_width="match_parent"
        android:layout_height="98dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="98dp"
            android:orientation="horizontal">

            <FrameLayout
                android:layout_width="80dp"
                android:layout_height="match_parent">

                <ProgressBar
                    android:id="@+id/progressbar_search_movie"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="20dp" />

                <ImageView
                    android:id="@+id/iv_movie"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            </FrameLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="match_parent">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_weight="1.25"
                    android:layout_height="match_parent">
                    <TextView
                        android:id="@+id/movie_name"
                        android:layout_gravity="center"
                        android:layout_marginLeft="5dp"
                        android:textStyle="bold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="17sp"
                        android:text="Tay Du Ky"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_weight="0.75"
                    android:orientation="vertical"
                    android:layout_height="match_parent">
                    <!--<LinearLayout
                        android:layout_margin="2dp"
                        android:layout_weight="1"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <TextView
                            android:textStyle="italic"
                            android:layout_gravity="left"
                            android:layout_marginLeft="5dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="12sp"
                            android:text="Thời lượng : "/>
                        <TextView
                            android:id="@+id/movie_time"
                            android:textStyle="italic"
                            android:layout_gravity="left"
                            android:layout_marginLeft="5dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="12sp"
                            android:text="120 phút"/>
                    </LinearLayout>-->
                    <LinearLayout
                        android:layout_margin="2dp"
                        android:layout_weight="1"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <TextView
                            android:textStyle="italic"
                            android:layout_gravity="center"
                            android:layout_marginLeft="5dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="12sp"
                            android:text="Ngày ra mắt : "/>
                        <TextView
                            android:id="@+id/movie_date"
                            android:textStyle="italic"
                            android:layout_gravity="center"
                            android:layout_marginLeft="5dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="12sp"
                            android:text="20-11-2017"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_margin="2dp"
                        android:layout_weight="1"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <TextView
                            android:textStyle="italic"
                            android:layout_gravity="center"
                            android:layout_marginLeft="5dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="12sp"
                            android:text="Đánh giá : "/>

                        <TextView
                            android:layout_gravity="center"

                            android:id="@+id/movie_vote"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="7.4"
                            android:textSize="12sp" />

                        <ImageView
                            android:layout_gravity="center"

                            android:id="@+id/label16"
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            android:src="@mipmap/ic_star"/>
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>
    </android.support.v7.widget.CardView>
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"/>

</LinearLayout>
