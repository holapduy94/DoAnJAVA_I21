<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginLeft="2dp"
    android:layout_marginBottom="15dp">
    <android.support.design.widget.CoordinatorLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/tv_show_poster"
            android:scaleType="centerCrop"
            android:layout_width="165dp"
            android:layout_height="200dp" />
        <View
            android:background="@drawable/gradient_background_v2"
            android:layout_width="165dp"
            android:layout_height="110dp"
            android:layout_gravity="bottom" />
        <TextView
            android:width="120dp"
            android:maxLines="1"
            android:ellipsize="end"
            android:id="@+id/name_tv_show"
            android:text="The Walking Dead"
            android:textColor="@color/colorTextPrimary"
            android:textStyle="bold"
            android:textSize="15sp"
            android:layout_gravity="bottom|left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:layout_marginBottom="5dp"/>
        <TextView
            android:id="@+id/year_on_air"
            android:text="2010"
            android:textColor="@color/colorTextPrimary"
            android:textSize="12sp"
            android:background="@drawable/time_border_v2"
            android:paddingLeft="3dp"
            android:paddingRight="3dp"
            android:layout_marginTop="4dp"
            android:layout_marginRight="3dp"
            android:layout_gravity="top|right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </android.support.design.widget.CoordinatorLayout>
</android.support.v7.widget.CardView>