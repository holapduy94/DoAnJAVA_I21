<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>


    </style>
    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


    <style name="MainTabLayout" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">11sp</item>
    </style>

    <style name="TextNormalWhite">
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textSize">@dimen/text_normal</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="TextImageLabel">
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textSize">@dimen/text_normal</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">sans-serif-condensed</item>
    </style>

    <style name="TextH3">
        <item name="android:textColor">@color/colorGray</item>
        <item name="android:textSize">@dimen/text_h3</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">sans-serif-light</item>
    </style>

    <style name="TextNormal">
        <item name="android:textColor">@color/colorGray</item>
        <item name="android:textSize">@dimen/text_normal</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="CommentRatingBar" parent="Theme.AppCompat">
        <item name="colorControlNormal">#BDBDBD</item>
        <item name="colorControlActivated">#757575</item>
    </style>

</resources>
